@model ServiceLayer.DTO.DetailsMovieTheaterModel

@{
    ViewData["Title"] = "Remover Cinema";
}

<h3>Tem certeza que deseja remover esse cinema?</h3>
<div>
    <h4>Informações</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Cinema
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Rua
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt>
            Cep
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt>
           Número
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumberAddress)
        </dd>
        <dt>
            Cidade
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CityName)
        </dd>
        <dt>
            Estado
        </dt>
        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para lista de cinemas</a>
    </form>
</div>
