@model ServiceLayer.DTO.DetailsSessionModel

@{
    ViewData["Title"] = "Editar Sessão";
}

<h4>Editar sessão</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie" class="control-label">Filme</label>
                <select class="form-group form-control" asp-for="Movie">
                    @foreach (var item in Model.ListMovies)
                    {
                        if(item.Id == Model.Movie){
                    <option value="@item.Id" class="form-control" selected="selected">@item.Name</option>
                        }
                        else{
                    <option value="@item.Id" class="form-control">@item.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="Movie" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Room" class="control-label">Sala</label>
                <select class="form-group form-control" asp-for="Room">
                    @foreach (var item in Model.ListRooms)
                    {
                        if(item.Id == Model.Room){
                            <option value="@item.Id" class="form-control" selected="selected">@item.RoomNumber</option>
                        }
                        else{
                            <option value="@item.Id" class="form-control" >@item.RoomNumber</option>
                        }
                    }
                </select>
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Inicio da sessão</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Fim da sessão</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista de sessões</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
