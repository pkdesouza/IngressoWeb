@model ServiceLayer.DTO.DetailsSessionModel

@{
    ViewData["Title"] = "Remover sessão";
}

<h3>Tem certezam que deseja remover essa sessão?</h3>
<div>
    <h4>Informações</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Filme
        </dt>
        <dd>
            @foreach (var item in Model.ListMovies)
            {
                if(item.Id == Model.Movie){
                    @item.Name
                }
            }
        </dd>
        <dt>
            Sala
        </dt>
        <dd>
            @foreach (var item in Model.ListRooms)
            {
                if(item.Id == Model.Room){
                    @item.RoomNumber
                }
            }
        </dd>
        <dt>
            Inicio da sessão
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt>
            Fim da sessão
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Remover" class="btn btn-danger" /> 
        <a asp-action="Index">Voltar para lista de sessões</a>
    </form>
</div>
