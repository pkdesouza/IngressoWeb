@model ServiceLayer.DTO.DetailsMovieModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza que deseja remover esse filme?</h3>
<div>
    <h4>Informações</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Filme
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Sinopse
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Synopsis)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Remover" class="btn btn-danger" />
        <a asp-action="Index">Voltar para lista de filmes</a>
    </form>
</div>
